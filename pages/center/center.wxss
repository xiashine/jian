/* pages/center/center.wxss */
@import '../../style/iconfont.wxss';
.page{
  background-color: #F8F8F8;
}
.share{
  
}
.backcolor{

}
.header {
    margin: 90rpx 0 90rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}
 
.header image {
    width: 200rpx;
    height: 200rpx;
}
 
.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}
 
.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
 
.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}
.page__userinfo{
text-align: center;
}
.avatar{
  width: 80px;
  height: 80px;
}
.kind-list__item{margin:10px 0;background-color:#ffffff;border-radius:2px;overflow:hidden}.kind-list__item:first-child{margin-top:0}.kind-list__img{width:30px;height:30px}.kind-list__item-hd{padding:20px;-webkit-transition:opacity .3s;transition:opacity .3s}.kind-list__item-hd_show{opacity:.4}.kind-list__item-bd{height:0;overflow:hidden}.kind-list__item-bd_show{height:auto}
.sharegroup{
  width: 16px;
  height: 16px;
}
.share {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 16px;
    height: 16px;
    background: none;
}

.share::after{
     border: none; 
}
.page__list{
padding: 20px 0 20px 0;
}
.page__list_bigimg{
  width: 100%;
  height: 180px;
}
.page__list_single{
  display: flex;
  margin: 20px;
  border-bottom:1px solid #e5e5e5;
  padding-bottom: 5px;
}
.page__list_single .page__list_title
{
  padding-right: 10px;
  flex:1;
}
.page__list_img{
  width: 80px;height: 80px;
}